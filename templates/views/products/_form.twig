<form
  method="POST" action="/products/{% if products.id %}{{ products.id }}{% endif %}"
>
  {% if products.id %}
  <input type="hidden" name="id" value="{{ products.id }}" />
  {% endif %}
  <div>
    <label for="title">Name:</label>
    <input type="text" name="title" id="title" value="{{ products.title }}" />
  </div>
  <div>
    <label for="slug">Slug:</label>
    <input type="text" name="slug" id="slug" value="{{ products.slug }}" />
  </div>
  <div>
    <label for="description">Description:</label>
    <textarea name="description" id="description">{{ products.description }}</textarea>
  </div>
  <div>
    <label for="price">Price:</label>
    <input type="number" name="price" id="price" value="{{ products.price }}" />
  </div>
  <div>
    <label for="is_published">Is Published:</label>
    <input type="checkbox" name="is_published" id="is_published" {% if products.is_published %}checked{% endif %} />
  </div>
  <div>
    <input type="submit" value="Submit" name="submit" aria-label="Submit" />
  </div>
</form>
